<div class="col-md-offset-2 mb-4 edit-profile-wrapper">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="profile-form-wrap">
        <%= form_for(@user) do |f| %>

          <div class="form-group">
            <%= f.label :full_name, "フルネーム" %>
            <%= f.text_field :full_name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :name, "ユーザーネーム" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.label :website, "ウェブサイト" %>
            <%= f.text_field :website, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :bio, "自己紹介" %>
            <%= f.text_field :bio, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :phonenumber, "電話番号" %>
            <%= f.text_field :phonenumber, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :sex, "性別" %><br>
            <%= f.label :男性 %>
            <%= f.radio_button :sex, :男性 %>
            <%= "/" %>
            <%= f.label :女性 %>
            <%= f.radio_button :sex, :女性 %>
          </div>

          <%= f.submit "変更する", class: "btn btn-primary" %>
          <%= link_to "パスワード変更", edit_user_registration_path, class: "btn btn-primary" %>
          <%= link_to "アカウントを削除", registration_path(@user),
                class: "btn btn-danger float-right", method: :delete, data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

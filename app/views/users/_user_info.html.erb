<div class="row">
    <%= image_tag avatar_url(@user), class: "round-img" %>
    <h1 class="my-auto"><%= @user.name %></h1>
</div>
<%= render "layouts/stats" %>
<%= render "follow_form" %>
<% if @user == current_user %>
  <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-outline-dark common-btn edit-profile-btn" %>
<% end %>
